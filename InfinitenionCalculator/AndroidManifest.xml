                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="jp.tannakaken.infinitenion.gui.Prefs"
            android:label="@string/setting_label" >
